{
  "functions": {
    "api/webhook.js": { "maxDuration": 60 },
    "api/cron.js":    { "maxDuration": 30 },
    "api/admin.js":   { "maxDuration": 30 }
  },
  "routes": [
    { "src": "/admin", "dest": "/public/admin.html" },
    { "src": "/api/admin/(.*)", "dest": "/api/admin.js" }
  ],
  "crons": [
    {
      "path":     "/api/cron",
      "schedule": "* * * * *"
    }
  ]
}